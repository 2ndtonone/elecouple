<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@integer/enter_fade_duration" android:exitFadeDuration="@integer/exit_fade_duration">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/general_btn_pressed" />
            <corners android:bottomLeftRadius="@dimen/dialog_corner_radius" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:bottomLeftRadius="@dimen/dialog_corner_radius" />
        </shape>
    </item>
</selector>