<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/enter_fade_duration"
    android:exitFadeDuration="@integer/exit_fade_duration"
    >

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/orange_light" />
            <corners android:radius="@dimen/round_corner_radius" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/orange" />

            <corners android:radius="@dimen/round_corner_radius" />

            <stroke android:width="@dimen/round_stroke_width" android:color="@color/orange" />

        </shape>

    </item>

</selector>