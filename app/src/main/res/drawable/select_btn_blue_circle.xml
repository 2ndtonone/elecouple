<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:enterFadeDuration="@integer/enter_fade_duration"
          android:exitFadeDuration="@integer/exit_fade_duration">

    <item android:state_selected="false">
        <shape android:shape="oval">
            <size android:width="60dp"
                  android:height="60dp"/>
            <solid android:color="@color/light1_gray"/>
            <stroke android:width="1dp" android:color="@color/main_blue"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="oval">
            <size android:width="60dp"
                  android:height="60dp"/>
            <solid android:color="@color/main_blue"/>
        </shape>
    </item>

</selector>