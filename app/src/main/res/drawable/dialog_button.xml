<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/enter_fade_duration"
    android:exitFadeDuration="@integer/exit_fade_duration"
    >

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/light1_gray" />
            <corners android:bottomLeftRadius="2dip" android:bottomRightRadius="2dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="2dip" android:bottomRightRadius="2dp"/>
        </shape>

    </item>

</selector>