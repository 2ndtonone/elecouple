<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@integer/enter_fade_duration" android:exitFadeDuration="@integer/exit_fade_duration">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#dddddd"/>
            <corners android:radius="44dp"/>
            <stroke android:width="@dimen/split_line_h" android:color="@color/main_red"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="44dp"/>
            <stroke android:width="@dimen/split_line_h" android:color="@color/main_red"/>
        </shape>
    </item>
</selector>