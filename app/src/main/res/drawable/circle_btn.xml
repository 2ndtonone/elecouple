<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:enterFadeDuration="@integer/enter_fade_duration"
          android:exitFadeDuration="@integer/exit_fade_duration">

    <item android:state_pressed="false">
        <shape android:shape="oval">
            <size android:width="@dimen/circle_btn_size"
                  android:height="@dimen/circle_btn_size"/>
            <solid android:color="@color/light1_gray"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size android:width="@dimen/circle_btn_size"
                  android:height="@dimen/circle_btn_size"/>
            <solid android:color="@color/item_bord_line"/>
        </shape>
    </item>

</selector>